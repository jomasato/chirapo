rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // User photos
    match /users/{userId}/photos/{photoId} {
      // Upload: Auth required, own folder
      allow write: if request.auth != null 
                   && request.auth.uid == userId;
      
      // Read: Public (so admin/other users can see in ranking/etc)
      allow read: if true;
    }
  }
}
